<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:gravity="center"
    tools:context=".ui.DataCollectionFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:columnCount="2"
            android:orientation="horizontal"
            android:rowCount="9">

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/current_data_collected"
                android:textSize="24sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_marginBottom="16dp"
                android:layout_columnSpan="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/distance_run"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="1" />

            <TextView
                android:id="@+id/distanceRun"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_column="1"
                android:layout_row="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/steps_counter"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="2" />

            <TextView
                android:id="@+id/stepsCounter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_column="1"
                android:layout_row="2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_sleeping"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="3" />

            <TextView
                android:id="@+id/startSleeping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_column="1"
                android:layout_row="3" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/end_sleeping"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="4" />

            <TextView
                android:id="@+id/endSleeping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_column="1"
                android:layout_row="4" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/avg_temperature_c"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="5" />

            <TextView
                android:id="@+id/avgTemperature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_column="1"
                android:layout_row="5" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/avg_humidity"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="6" />

            <TextView
                android:id="@+id/avgHumidity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_column="1"
                android:layout_row="6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/avg_pressure"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="7" />

            <TextView
                android:id="@+id/avgPressure"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_column="1"
                android:layout_row="7" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/data_stored"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_column="0"
                android:layout_row="8" />

            <TextView
                android:id="@+id/dataStored"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:gravity="center"
                android:layout_column="1"
                android:layout_row="8" />

        </GridLayout>
    </ScrollView>

</FrameLayout>
